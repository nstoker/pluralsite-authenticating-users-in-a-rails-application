<div class="articles">
  <h1>Articles</h1>
  <h2 class="login">
    <% if logged_in? %>
      <a href="/home/logout">Logout</a>
    <% else %>
      <a href="/home/login">Login</a>
    <% end %>
  </h2>
  <% articles('BBC').items.each do |item| %>
    <div class="article">
      <h2><%= item.title %></h2>
      <p><%= logged_in? ? (raw item.description) : 'You must be logged in to see this' %></p>
      <p><%= item.pubDate %></p>
    </div>
  <% end %>
</div>
